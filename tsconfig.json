{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* ðŸ”¹ Vite-specific fixes */
    "moduleResolution": "Node",  // Changed from "bundler" to "Node"
    "types": ["vite/client"],  // Ensures TypeScript recognizes import.meta.env

    /* âœ… Keep these settings */
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"]
}
